    <script>
            window.onload = async function () {
            const userId = sessionStorage.getItem("userId");
            const token = sessionStorage.getItem("jwtToken");
            
            if (!userId) {
                console.error("Kullanıcı ID'si bulunamadı.");
                return;
            }

             const response = await fetch(`https://localhost:7060/api/BranchDashboard/GetBranchDashboard/${userId}`, {
                       method: 'GET',
                       headers: {
                       "Authorization": `Bearer ${token}`
                       }
                    }); 
            if (!response.ok) return;

            const data = await response.json();

            document.getElementById("branchName").innerText = data.branchName;
            document.getElementById("personnelCount").innerText = data.personnelCount;
            document.getElementById("customerCount").innerText = data.customerCount;
            document.getElementById("totalBalance").innerText = `${data.totalBalance.toFixed(2)} ₺`;
            
        };

       //Şube sayısı
           const token = sessionStorage.getItem("jwtToken");

             fetch("https://localhost:7060/api/Branches/GetTotalBranchCount", {
                    method: 'GET',
                 headers: {
                     "Authorization": `Bearer ${token}`
                 }
             })
        .then(res => res.json())
        .then(data => {
            document.getElementById("totalBranchCount").innerText = data;
        })
        .catch(err => console.error("Şube sayısı alınamadı:", err));


        //şubeye o gün hesap açan kullanıcılar


            
        document.addEventListener("DOMContentLoaded", function () {
            const token = sessionStorage.getItem("jwtToken");

             fetch("https://localhost:7060/api/BranchDashboard/GetTodayCustomersByBranch", {
                   method: 'GET',
                headers: {
                    "Authorization": `Bearer ${token}`
                }
            })
            .then(res => {
                if (!res.ok) throw new Error("Veri alınamadı.");
                return res.json();
            })
            .then(data => {
                const listContainer = document.getElementById("todayCustomerList");
                listContainer.innerHTML = "";

                if (data.length === 0) {
                    listContainer.innerHTML = "<p class='text-muted'>Bugün kayıtlı müşteri yok.</p>";
                    return;
                }

                data.forEach(customer => {
                    const itemHtml = `
                        <div class="item-list d-flex align-items-center mb-2">
                            <div class="avatar">
                                <img src="/UserPage/kaiadmin-lite-1.2.0/assets/img/jm_denis.jpg"
                                     alt="..."
                                     class="avatar-img rounded-circle" />
                            </div>
                            <div class="info-user ms-3">
                                <div class="username fw-bold">${customer.fullName}</div>
                                <div class="status text-muted">Müşteri No: ${customer.customerNumber}</div>
                            </div>
                            <button class="btn btn-icon btn-link op-8 me-1 ms-auto">
                                <i class="far fa-envelope"></i>
                            </button>
                            <button class="btn btn-icon btn-link btn-danger op-8">
                                <i class="fas fa-ban"></i>
                            </button>
                        </div>
                    `;
                    listContainer.innerHTML += itemHtml;
                });
            })
            .catch(err => {
                console.error("Hata:", err);
                document.getElementById("todayCustomerList").innerHTML = "<p class='text-danger'>Müşteri verileri alınırken hata oluştu.</p>";
            });
        });


        //İşlem Geçmişi kısmı için
              document.addEventListener("DOMContentLoaded", async function () {
              const tbody = document.getElementById("transactionBody");
              const token = sessionStorage.getItem("jwtToken");

            try {
                    const response = await fetch(`https://localhost:7060/api/BranchDashboard/GetBranchTransactions`, {
                      method: 'GET',
                      headers: {
                      "Authorization": `Bearer ${token}`
                      }
                   }); 
                  const transactions = await response.json();

                transactions.forEach(tx => {
                    const tr = document.createElement("tr");

                    tr.innerHTML = `
                        <th scope="row">
                            <button class="btn btn-icon btn-round btn-success btn-sm me-2">
                                <i class="fa fa-check"></i>
                            </button>
                             #${tx.transactionId}
                        </th>
                         <td class="text-end"> ${tx.userFullName} #${tx.accountId}</td>
                        <td class="text-end">${formatDateTime(tx.date)}</td>
                        <td class="text-end">${tx.amount.toFixed(2)}₺</td>
                        <td class="text-end">
                            <span class="badge badge-success">${tx.transactionType}</span>
                            </td>
                    `;

                    tbody.appendChild(tr);
                });
            } catch (err) {
                console.error("İşlem verileri alınamadı:", err);
                tbody.innerHTML = `<tr><td colspan="4" class="text-center text-danger">Veri alınamadı</td></tr>`;
            }

            function formatDateTime(dateString) {
                const date = new Date(dateString);
                return date.toLocaleString("tr-TR");
            }
        });

    </script>

